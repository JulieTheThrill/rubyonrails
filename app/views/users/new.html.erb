<% @page_title = "UserAuth | Signup" %>
<div class="Sign_Form well">
  <fieldset>
    <legend>Sign Up</legend>
    <% if @user.errors.any? %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Please Fix the Following Problems</h3>
        </div>
        <div class="panel-body">
          <ul class="Signup_Errors">
          <% for message_error in @user.errors.full_messages %>
            <li class="">* <%= message_error %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
      <div class="form-group">
        <%= label_tag "username", "Username*", {:class => "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.text_field :username, {:class => "form-control", :placeholder => "Username"} %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag "first_name", "First Name*", {:class => "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.text_field :first_name, {:class => "form-control", :placeholder => "First Name"} %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag "last_name", "Last Name*", {:class => "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.text_field :last_name, {:class => "form-control", :placeholder => "Last Name"} %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag "email", "Email*", {:class => "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.text_field :email, {:class => "form-control", :placeholder => "Email"} %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag "password", "Password*", {:class => "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.password_field :password, {:class => "form-control", :placeholder => "Password"} %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag "password_confirmation", "Password Confirm*", {:class => "col-lg-2 control-label"} %>
        <div class="col-lg-10">
          <%= f.password_field :password_confirmation, {:class => "form-control", :placeholder => "Confirm"} %>
        </div>
      </div>
      <p>Already have an account? <%= link_to "Log In", controller: "sessions", action: "login" %></p>
      <%= f.submit :Signup, {:class => "btn btn-primary"} %>
    <% end %>
  </fieldset>
</div>