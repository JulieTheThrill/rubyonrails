<h1>Viewing all surveys</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Survey Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= link_to 'View Responses', survey %> </td>
        <td><%= link_to 'Edit Questions', edit_survey_path(survey) %>  </td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

